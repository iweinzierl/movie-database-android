<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/search_controls"
        style="@style/MyTheme.SearchControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/search_button"
            style="@style/MyTheme.SearchControls.SearchButton"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/moviesearch_search_button" />

        <EditText
            android:id="@+id/search_field"
            style="@style/MyTheme.SearchControls.SearchField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/search_button"
            android:hint="@string/moviesearch_search_field_hint" />

    </RelativeLayout>

    <ListView
        android:id="@+id/search_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_controls" />

</RelativeLayout>