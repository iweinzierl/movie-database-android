<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/MyTheme.MovieDetail.Text.Title.LentMovieTo"
        android:id="@+id/lent_movie_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

    <ScrollView
        style="@style/MyTheme.MovieDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/lent_movie_to">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/cover"
                    style="@style/MyTheme.MovieDetail.Cover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/cover"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title"
                        style="@style/MyTheme.MovieDetail.Text.Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/original_title"
                        style="@style/MyTheme.MovieDetail.Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/publish_date"
                        style="@style/MyTheme.MovieDetail.Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/length"
                        style="@style/MyTheme.MovieDetail.Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/genres"
                        style="@style/MyTheme.MovieDetail.Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/description"
                style="@style/MyTheme.MovieDetail.Text.Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
