<resources>

    <style name="MyTheme" parent="Theme.AppCompat.NoActionBar" />

    <style name="MyTheme.Toolbar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="MyTheme.Navigation">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="MyTheme.Navigation.Header">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="MyTheme.Navigation.Header.Icon">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="MyTheme.Navigation.Header.Text">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MyTheme.Navigation.Header.Text.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MyTheme.Navigation.Header.User">
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyTheme.Navigation.Item">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="MyTheme.Navigation.Item.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTheme.Navigation.Item.Image">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="MyTheme.ListItem">
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="MyTheme.ListItem.Image">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="MyTheme.ListItem.Text">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyTheme.ListItem.Text.Title">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTheme.SearchControls">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="MyTheme.SearchControls.SearchField" parent="Widget.AppCompat.EditText">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyTheme.SearchControls.SearchButton" parent="Widget.AppCompat.Button">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="MyTheme.MovieDetail">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="MyTheme.MovieDetail.Cover">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="MyTheme.MovieDetail.Text">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyTheme.MovieDetail.Text.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyTheme.MovieDetail.Text.Description">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
